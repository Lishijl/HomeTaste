<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F1"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".RecipeForm">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:text="Crear Receta Nueva"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:paddingVertical="15dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/nomRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:paddingVertical="15dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/descripcio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiempo:"
        android:paddingVertical="15dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/temps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nivel de habilidad:"
        android:paddingVertical="15dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/habilitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Raciones:"
        android:paddingVertical="15dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/racio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:text="Añadir imagen:"
        android:textSize="16sp" />

    <Button
        android:id="@+id/addImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mOrange1buttons"
        android:text="Subir imagen"
        android:layout_marginVertical="15dp"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/saveRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mOrange1buttons"
        android:text="Guardar receta"
        tools:ignore="TextContrastCheck" />

</LinearLayout>